{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_details'|trans({'%username%': user.username|default('')}) }}
{% endblock %}

{% block body %}
    {% include 'menu.html.twig' %}
    <div class="display">
        <h1>{{ 'title_user_details'|trans({'%username%': user.username|default('')}) }}</h1>
        {% if user is defined and user|length %}
            <dl class="dl-horizontal">
                <dt>{{ 'label_user_username '|trans }}</dt>
                <dd>{{  user.username }}</dd>
                <dt>{{ 'label_user_email'|trans }}</dt>
                <dd>{{  user.email }}</dd>
                <dt>{{ 'label_user_data_first_name'|trans }}</dt>
                <dd>{{  user.userData.firstName }}</dd>
                <dt>{{ 'label_user_data_surname'|trans }}</dt>
                <dd>{{  user.userData.surname }}</dd>
                <dt>{{ 'label_user_data_data'|trans }}</dt>
                <dd>{{  user.userData.data }}</dd>
            </dl>
            <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action_edit'|trans }}">
                {{ 'action_edit'|trans }}
            </a>
        {% else %}
            <p>
                {{ 'message_item_not_found'|trans }}
                {#<i class="bi bi-arrow-left icon-3x"></i>#}
            </p>
        {% endif %}
    </div>
{% endblock %}
