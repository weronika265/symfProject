{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_event_details'|trans({'%id%': event.id|default('')}) }}
{% endblock %}

{% block body %}
    {% include 'menu.html.twig' %}
    <div class="display">
        <h1>{{ 'title_event_details'|trans({'%id%': event.id|default('')}) }}</h1>
        {% if event is defined and event|length %}
            <dl class="dl-horizontal">
                <dt>{{ 'label_event_id'|trans }}</dt>
                <dd>{{ event.id }}</dd>
                <dt>{{ 'label_name'|trans }}</dt>
                <dd>{{ event.name }}</dd>
                <dt>{{ 'label_date'|trans }}</dt>
                <dd>{{ event.date|date('d/m/Y') }}</dd>
                <dt>{{ 'label_description '|trans }}</dt>
                <dd>{{  event.description }}</dd>
                <dt>{{ 'label_event_category'|trans }}</dt>
                <dd>{{  event.category.name }}</dd>
            </dl>
            <p>
                <a href="{{ url('event_index') }}" title="{{ 'action_back_to_list'|trans }}">
                    {{ 'action_back_to_list'|trans }}
                </a>
            </p>
        {% else %}
            <p>
                {{ 'message_item_not_found'|trans }}
                {#<i class="bi bi-arrow-left icon-3x"></i>#}
            </p>
        {% endif %}
    </div>
{% endblock %}
